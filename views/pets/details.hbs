<div class="details">
  <br>
<h1>{{pet.name}}</h1>
<hr />
<img src="{{pet.photoUrl}}" alt="{{pet.name}} photo" />
<hr />
<p>Breed: {{pet.breed}}</p>
<p>Age: {{pet.age}}</p>
<p>Description: {{pet.description}}</p>
<p>Available: {{pet.available}}</p>
{{#if isAdmin}}
  <a href="/pets/{{pet.id}}/edit">Edit</a>
{{/if}}
{{!NATASHA: reservation/host link added Sept. 17}}
{{#if isLoggedIn}}
<a href="../host/{{pet.id}}/host">Reserve</a>
{{else}}
<p><a href="/auth/signup">Sign up</a> or <a href="/auth/login">log in</a> to reserve this pet</p>
{{/if}}

<hr />
<!--how we communicate things with 'post'-->
{{#if isAdmin}}
  <form action="/pets/{{pet.id}}/delete" method="post">
    <button type="submit">Delete</button>
  </form>
{{/if}}
</div>
