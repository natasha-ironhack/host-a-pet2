<h1>{{pet.name}}</h1>
<hr />
<p>Breed: {{pet.breed}}</p>
<p>Age: {{pet.age}}</p>
<p>Description: {{pet.description}}</p>
<p>Status: {{pet.status}}</p>
<a href="/pets/{{pet.id}}/edit">Edit</a>

<hr />
<!--how we communicate things with 'post'-->
<form action='/pets/{{pet.id}}/delete' method="post">
    <button type="submit">Delete</button>
</form>
<form action='/pets-list' method="post">
    <button type="submit">Back</button>
</form>