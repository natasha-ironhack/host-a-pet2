{{#if isAdmin}}
  <h3>Edit Pet</h3>

  <form
    action="/pets/{{pet.id}}/edit"
    method="POST"
    enctype="multipart/form-data"
  >
    <label for="name">Name</label>
    <input type="text" name="title" value="{{pet.name}}" />

    <label for="breed">Breed</label>
    <input type="text" name="breed" value="{{pet.name}}" />

    <label for="age">Age</label>
    <input type="number" name="age" min="1" max="10" value="{{pet.age}}" />

    <label for="photoUrl">Photo</label>
    <input type="file" name="photoUrl" />

    <label for="description">Description</label>
    <input type="text" name="description" value="{{pet.description}}" />

    <label for="available">Available</label>
    <input type="text" name="available" value="{{pet.available}}" />

    <button type="submit">Submit</button>
  </form>
{{/if}}